<odoo>
<template id="employee_form_view">
  <form>
    <div class="form-group">
      <label for="name">Nom :</label>
      <input type="text" name="name" t-att-value="record.name" class="form-control" />
    </div>
    <div class="form-group">
      <label for="email">Email :</label>
      <input type="text" name="email" t-att-value="record.email" class="form-control" />
    </div>
    <div class="form-group">
      <label for="phone">Téléphone :</label>
      <input type="text" name="phone" t-att-value="record.phone" class="form-control" />
    </div>
    <div class="form-group">
      <label for="department">Département :</label>
      <input type="text" name="department" t-att-value="record.department" class="form-control" />
    </div>
    <button type="button" class="btn btn-primary" t-on-click="saveRecord()">Sauvegarder</button>
    <button type="button" class="btn btn-secondary" t-on-click="discardChanges()">Annuler</button>
  </form>
</template>
</odoo>