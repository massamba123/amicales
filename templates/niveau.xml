<odoo>
    <template id="niveau_template" name="niveau Template" >
        <t t-call="amicales.header"/>
        <xpath expr="." position="inside">
            <div class="row">
                <div class="col-md-12">
                    <h1>Etudiant</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Niveau</th>
                                <th>Departement</th>
                                <th>Promotion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="niveaux" t-as="niveau">
                                <tr>
                                    <td><t t-esc="niveau.niveau"/></td>
                                    <td><t t-esc="niveau.departement_id.nomDepartement"/></td>
                                    <td><t t-esc="niveau.promotion_ids"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </xpath>
        <t t-call="amicales.footer"/>
    </template>
</odoo>