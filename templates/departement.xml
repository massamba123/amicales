<odoo>
    <template id="departement_template" name="departement Template" >
        <t t-call="amicales.header"/>
        <xpath expr="." position="inside">
            <div class="row">
                <div class="col-md-12">
                    <h1>Faculte</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Nom Departement</th>
                                <th>Faculte</th>
                                <th>Niveau</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="departements" t-as="departement">
                                <tr>
                                    <td><t t-esc="departement.nomDepartement"/></td>
                                    <td><t t-esc="departement.faculte_id.nomFaculte"/></td>
                                    <td><t t-esc="departement.niveau_ids"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </xpath>
        <t t-call="amicales.footer"/>
    </template>
</odoo>