<odoo>
    <template id="createuniversite">
             <t t-call="amicales.header"/>
            <form action="/createU" method="post">
                <div class="my-custom-class">
                    <group>
                        <group>
                            <label for="nomUniversite">Nom Universite:</label>
                            <input type="text" name="nomUniversite" id="nomUniversite" required="true"/>
                            <label for="adresse">Adresse:</label>
                            <input type="text" name="adresse" id="adresse" required="true"/>
                        </group>
                        <group>
                            <label for="faculte_ids">Facult√©:</label>
                                <select name="faculte_ids[]">
                                    <t t-foreach="facultes" t-as="faculte">
                                        <option t-att-value="faculte.id" t-att-selected="faculte.id in faculte_ids"><t t-esc="faculte.nomFaculte"/></option>
                                    </t>
                                </select>

                        </group>
                    </group>
                    <button type="submit">Enregistrer</button>
                </div>
            </form>
         <t t-call="amicales.footer"/>
    </template>
</odoo>
